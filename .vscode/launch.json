    "version": "0.2.0",
    "configurations": [
        {
            "type": "by-gdb",
            "request": "launch",
            "name": "Launch(gdb)",
            "program": "target/debug/testserver",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'testserver'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=testserver",
                    "--package=testserver"
                ],
                "filter": {
                    "name": "testserver",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'testserver'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=testserver",
                    "--package=testserver"
                ],
                "filter": {
                    "name": "testserver",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}